                            <a class="btn btn-primary" href="?uri=chapitre&id={{ post.id }}">lire la suite</a>
                        </div>
                    </div>
                </div>


            {% endfor %}
            <div class="col-lg-12" id="btnTPS">
                <a class="btn-secondary" href="?uri=chapitres"> Tous les chapitres </a>
