{% extends "baseadministration.html.twig" %}
{% block body %}

    <form method="post">
        <div class="form-group">
            <label for="post_title">Titre</label>
            <input value="{{ form.getData('title') }}" name="title" type="text" class="form-control" id="post_title"  placeholder="Titre">
            {% if form.hasErrors('title') %}
                <div class="text-danger">Votre titre n'est pas valide !</div>
            {% endif %}
        </div>
        <div class="form-group">
            <label for="post_content">Article</label>
            <textarea  name="content" class="form-control" id="post_content" placeholder="Article">{{ form.getData('content') }}</textarea>
            {% if form.hasErrors('content') %}
                <div class="text-danger">Votre titre n'est pas valide !</div>
            {% endif %}
        </div>
        {% if form.hasErrors('csrf') %}
            <div class="text-danger">
                Token csrf invalide, veuillez renvoyer le formulaire.
            </div>
        {% endif %}
        <input type="hidden" name="csrf" value="{{ form.getPart('csrf').initToken }}">
        <button type="submit" class="btn btn-primary">Poster</button>
    </form>



{% endblock %}

