{% extends "base.html.twig" %}
{% block body %}

    <main>
        <div class="container">
            <!-- Page Heading/Breadcrumbs -->
            <h1 class="mt-4 mb-3">Chapitres
            </h1>

            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="?uri=homepage">Acceuil</a>
                </li>
                <li class="breadcrumb-item active">Chapitres</li>
            </ol>
            <div class="row">
                {% for post in posts %}
                <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
                    <div class="card h-100">
                        <div class="card-body">
                            <h4 class="card-title">


                                <a href="#"> {{ post.name }} </a>
                                {#<a href="post"><?= $post->getName(); ?></a>#}
                            </h4>
                            <a href="#"> {{ post.content }} </a>
{#                            <p class="card-text"><?= $post->getContent(); ?></p>-->#}

                            <button type="button" class="btn btn-primary">voir plus</button>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>

            <!-- Pagination -->
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>


                </li>
                <li class="page-item">
                    <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>


                </li>
            </ul>
        </div>

    </main>

{% endblock %}

