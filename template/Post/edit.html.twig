{% extends "base.html.twig" %}

{% block body %}

<form method="post">
    <div class="form-group">
        <label for="post_title">Titre</label>
        <input value="{{ form.getData('title') | default (post.title) }}" name="title" type="text" class="form-control" id="post_title"  placeholder="Titre">
        {% if form.hasErrors('title') %}
            <div class="text-danger">Votre titre n'est pas valide !</div>
        {% endif %}
    </div>
    <div class="form-group">
        <label for="post_content">Article</label>
        <textarea  name="content" class="form-control" id="post_content" placeholder="Article">{{ form.getData('content') | default (post.content) }}</textarea>
        {% if form.hasErrors('content') %}
            <div class="text-danger">Votre titre n'est pas valide !</div>
        {% endif %}
    </div>

    <button type="submit" class="btn btn-primary">Poster</button>
</form>



{% endblock %}